<Window x:Class="rayshud_installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:x2="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="rayshud Installer" Height="420" Width="800"
        Foreground="White"
        ResizeMode="NoResize">

    <x2:BusyIndicator 
        x:Name="busyIndicator"
        Foreground="Black">

        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="Resources/background.png" />
            </Grid.Background>

            <Label
                Name="lblStatus"
                Height="36"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="rayshud"
                FontSize="15"
                Foreground="White"
                RenderTransformOrigin="4.761,9.296" />

            <Label
                Name="lblNews"
                Height="34"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="..."
                FontSize="15"
                Foreground="White" />

            <GroupBox
                x:Name="gbOptions"
                Width="230"
                Height="161"
                Margin="10,41,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Header="Options">

                <Grid>
                    <CheckBox
                        x:Name="chkClassicHUD"
                        Grid.ColumnSpan="2"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Classic Main Menu Style"
                        Foreground="White" />

                    <CheckBox
                        x:Name="chkScoreboard"
                        Grid.ColumnSpan="2"
                        Margin="10,31,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Minimal Scoreboard"
                        Foreground="White" />

                    <CheckBox
                        x:Name="chkDisguiseImage"
                        Grid.ColumnSpan="2"
                        Margin="10,51,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Spy Disguise Image"
                        Foreground="White" />

                    <CheckBox
                        x:Name="chkDefaultBG"
                        Grid.ColumnSpan="2"
                        Margin="10,71,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Default Backgrounds"
                        Foreground="White" />

                    <CheckBox
                        x:Name="chkMenuImages"
                        Grid.ColumnSpan="2"
                        Margin="10,91,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Menu Class Images"
                        Foreground="White" />

                    <CheckBox
                        x:Name="chkDamagePos"
                        Grid.ColumnSpan="2"
                        Margin="10,111,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Damage Above Health"
                        Foreground="White" />
                </Grid>
            </GroupBox>

            <GroupBox
                x:Name="gbUbercharge"
                Width="265"
                Height="161"
                Margin="245,41,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Header="Ubercharge"
                MouseDoubleClick="GroupBox_OpenLayout">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="194*" />
                        <ColumnDefinition Width="59*" />
                    </Grid.ColumnDefinitions>

                    <RadioButton
                        x:Name="rbUberFlash"
                        Width="50"
                        Height="14"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Flash"
                        Foreground="White"
                        GroupName="UberStyle"
                        IsChecked="True" />

                    <RadioButton
                        x:Name="rbUberSolid"
                        Width="50"
                        Height="14"
                        Margin="95,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Solid"
                        Foreground="White"
                        GroupName="UberStyle"
                        RenderTransformOrigin="0.781,0.352" />

                    <RadioButton
                        x:Name="rbUberRainbow"
                        Width="70"
                        Height="14"
                        Margin="173,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Rainbow"
                        Foreground="White"
                        GroupName="UberStyle"
                        RenderTransformOrigin="0.253,0.581" Grid.ColumnSpan="2" />

                    <x2:ColorPicker
                        x:Name="cpUberBarColor"
                        Margin="127,32,10,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        VerticalAlignment="Top" Grid.ColumnSpan="2" />

                    <x2:ColorPicker
                        x:Name="cpUberFullColor"
                        Margin="127,57,10,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        VerticalAlignment="Top" Grid.ColumnSpan="2" />

                    <x2:ColorPicker
                        x:Name="cpUberFlash1"
                        Margin="127,82,10,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        VerticalAlignment="Top" Grid.ColumnSpan="2" />

                    <x2:ColorPicker
                        x:Name="cpUberFlash2"
                        Margin="127,107,10,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        VerticalAlignment="Top" Grid.ColumnSpan="2" />

                    <Label
                        Margin="10,32,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Charging Color:"
                        Foreground="White" Width="112" />

                    <Label
                        Margin="10,57,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Full Charge Color:"
                        Foreground="White" Width="112" />

                    <Label
                        Margin="10,82,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Full Charge Flash 1:"
                        Foreground="White" />

                    <Label
                        Margin="10,107,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Full Charge Flash 2:"
                        Foreground="White" />
                </Grid>
            </GroupBox>

            <GroupBox
                x:Name="gbCrosshair"
                Width="265"
                Height="161"
                Margin="515,41,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Header="Crosshair"
                MouseDoubleClick="GroupBox_OpenLayout">

                <Grid>
                    <ComboBox
                        x:Name="cbXHairStyle"
                        Width="116"
                        Margin="127,32,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" Height="20">
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="BasicCross"
                            IsSelected="True" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="BasicDot" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="CircleDot" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="OpenCross" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="OpenCrossDot" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="ScatterSpread" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="ThinCircle" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="Wings" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="WingsPlus" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="WingsSmall" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="WingsSmallDot" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="xHairCircle" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="KonrWings" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="KnuckleCrosses" />
                    </ComboBox>

                    <ComboBox
                        Name="cbXHairSize"
                        Width="116"
                        Margin="127,57,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" Height="20" >
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="10"
                            IsSelected="True" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="12" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="14" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="16" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="18" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="20" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="22" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="24" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="26" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="28" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="30" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="32" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="34" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="36" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="38" />
                        <ComboBoxItem
                            Width="118.4"
                            HorizontalAlignment="Left"
                            Content="40" />
                    </ComboBox>

                    <x2:ColorPicker
                        x:Name="cpXHairColor"
                        Margin="127,82,10,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        VerticalAlignment="Top" />

                    <x2:ColorPicker
                        x:Name="cpXHairPulse"
                        Margin="127,107,10,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        VerticalAlignment="Top" Grid.ColumnSpan="2" />

                    <CheckBox
                        x:Name="cbXHairEnable"
                        Margin="10,8,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Enable"
                        Foreground="White" RenderTransformOrigin="0.545,0.067" />

                    <CheckBox
                        x:Name="cbXHairOutline"
                        Margin="95,8,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Outline"
                        Foreground="White"
                        RenderTransformOrigin="-0.061,1.395" />

                    <CheckBox
                        x:Name="cbXHairPulse"
                        Margin="188,8,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Pulse"
                        Foreground="White"
                        RenderTransformOrigin="-0.061,1.395" />

                    <Label
                        Margin="10,32,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Crosshair Style:"
                        Foreground="White" />

                    <Label
                        Margin="10,57,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Crosshair Size:"
                        Foreground="White" />

                    <Label
                        Margin="10,82,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Base Color:"
                        Foreground="White" RenderTransformOrigin="0.467,0.804" />

                    <Label
                        Margin="10,107,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Pulse Color:"
                        Foreground="White" />
                </Grid>
            </GroupBox>

            <GroupBox
                x:Name="gbHealth"
                Width="306"
                Height="119"
                Margin="10,207,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Header="Health"
                MouseDoubleClick="GroupBox_OpenColors">

                <Grid>
                    <ListBox
                        Name="lbHealthStyle"
                        Width="65"
                        Height="77"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="10">
                        <ListBoxItem Content="Default" IsSelected="True" />
                        <ListBoxItem Content="Team Bar" />
                        <ListBoxItem Content="Cross" />
                        <ListBoxItem Content="Broesel" />
                    </ListBox>

                    <x2:ColorPicker
                        x:Name="cpHealthNormal"
                        Width="90"
                        Margin="91,22,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />

                    <x2:ColorPicker
                        x:Name="cpHealingDone"
                        Width="90"
                        Margin="194,22,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" RenderTransformOrigin="0.7,0.545" />

                    <x2:ColorPicker
                        x:Name="cpHealthBuff"
                        Width="90"
                        Margin="91,65,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />

                    <x2:ColorPicker
                        x:Name="cpHealthLow"
                        Width="90"
                        Margin="194,65,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />

                    <Label
                        Margin="91,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Health Normal:"
                        Foreground="White" />

                    <Label
                        Margin="91,44,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Health Buffed:"
                        Foreground="White" Width="90" />

                    <Label
                        Margin="194,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Healing Done:"
                        Foreground="White" Width="90" />

                    <Label
                        Margin="194,44,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Health Low:"
                        Foreground="White" Width="90" />
                </Grid>
            </GroupBox>

            <GroupBox
                x:Name="gbAmmo"
                Width="250"
                Height="120"
                Margin="321,207,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Header="Ammo"
                MouseDoubleClick="GroupBox_OpenColors">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*" />
                        <ColumnDefinition Width="89*" />
                    </Grid.ColumnDefinitions>

                    <x2:ColorPicker
                        x:Name="cpAmmoClip"
                        Width="90"
                        Margin="17,22,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" Grid.ColumnSpan="2" />

                    <x2:ColorPicker
                        x:Name="cpAmmoReserve"
                        Width="90"
                        Margin="97,22,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" Grid.Column="1" />

                    <x2:ColorPicker
                        x:Name="cpAmmoClipLow"
                        Width="90"
                        Margin="17,66,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" Grid.ColumnSpan="2" />

                    <x2:ColorPicker
                        x:Name="cpAmmoReserveLow"
                        Width="90"
                        Margin="97,66,0,0"
                        ColorMode="ColorCanvas"
                        ShowRecentColors="True"
                        ShowDropDownButton="False"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" Grid.Column="1" />

                    <Label
                        Margin="17,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Ammo In Clip:"
                        Foreground="White" Grid.ColumnSpan="2" Width="90" />

                    <Label
                        Margin="17,43,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Low Clip:"
                        Foreground="White" Grid.ColumnSpan="2" RenderTransformOrigin="0.845,0.615" Width="90" />

                    <Label
                        Margin="97,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Ammo In Reserve:"
                        Foreground="White" Grid.Column="1" />

                    <Label
                        Margin="97,44,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Low Reserve:"
                        Foreground="White" Grid.Column="1" Width="90" />
                </Grid>
            </GroupBox>

            <GroupBox
                x:Name="gbTeamSelect"
                Width="204"
                Height="60"
                Margin="576,207,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Header="Team Select">

                <Grid>
                    <RadioButton
                        x:Name="rbTeamLeft"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Left"
                        Foreground="White"
                        GroupName="TeamSelect"
                        FontSize="15"
                        IsChecked="True" Margin="25,10,0,0" />

                    <RadioButton
                        x:Name="rbTeamCenter"
                        Margin="100,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Center"
                        Foreground="White"
                        GroupName="TeamSelect"
                        FontSize="15" />
                </Grid>
            </GroupBox>

            <GroupBox
                x:Name="gbChatBox"
                Width="204"
                Height="60"
                Margin="576,266,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Foreground="White"
                Header="Chat Box"
                MouseDoubleClick="GroupBox_OpenChatBox">

                <Grid>
                    <RadioButton
                        x:Name="rbChatTop"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Top"
                        FontSize="15"
                        Foreground="White"
                        GroupName="ChatBox"
                        IsChecked="True" Margin="25,10,0,0" />

                    <RadioButton
                        x:Name="rbChatBottom"
                        Margin="100,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="15"
                        Content="Bottom"
                        Foreground="White"
                        GroupName="ChatBox" RenderTransformOrigin="0.511,1.644" />
                </Grid>
            </GroupBox>

            <Button
                x:Name="Install"
                Width="75"
                Height="34"
                Margin="10,331,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Install_Click"
                Content="Install"
                Style="{StaticResource Button}" />

            <Button
                x:Name="Uninstall"
                Width="75"
                Height="34"
                Margin="90,331,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Uninstall_Click"
                Content="Uninstall"
                Style="{StaticResource Button}" />

            <Button
                x:Name="Save"
                Width="115"
                Height="34"
                Margin="170,331,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Save_Click"
                Content="Apply Changes"
                Style="{StaticResource Button}" />

            <Button
                x:Name="Reset"
                Width="115"
                Height="34"
                Margin="425,331,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Reset_Click"
                Content="Reset to Default"
                Style="{StaticResource Button}" />

            <Button
                x:Name="Start"
                Width="130"
                Height="34"
                Margin="290,331,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Start_Click"
                Content="Start Team Fortress 2"
                Style="{StaticResource Button}" />

            <Button
                x:Name="ChangeDirectory"
                Width="115"
                Height="34"
                Margin="545,331,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ChangeDirectory_Click"
                Content="Change Directory"
                Style="{StaticResource Button}" />

            <Button
                x:Name="ReportIssue"
                Width="115"
                Height="34"
                Margin="665,331,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ReportIssue_Click"
                Content="Report an Issue"
                Style="{StaticResource Button}" />
        </Grid>
    </x2:BusyIndicator>
</Window>